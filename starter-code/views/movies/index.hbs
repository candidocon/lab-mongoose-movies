<h2>Movies:</h2>
<div>
  {{#each movies}}
  <div class="row">
    <div class="col">
      <a href="/movies/{{this.id}}">{{this.title}}</a><br>
    </div>
    <div class="col">
      <a class="btn" href="/movies/{{this.id}}/edit">Edit</a>
    </div>
    <div class="col">
      <form action="/movies/{{this.id}}/delete" method="POST">
        <button class="btn btn-delete">Delete</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>
<a href="movies/new/add-new" class="btn">Add a new Movie</a>