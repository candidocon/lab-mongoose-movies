<h2>Edit Movie:</h2>
<div class="table">
  <form action="/movies/{{movie.id}}/edit" method="POST">
    <label>Title:</label>
    <input type="text" name="title" value="{{movie.title}}">
    <label>Genre:</label>
    <input type="text" name="genre" value="{{movie.genre}}">
    <label>Plot:</label>
    <input type="text" name="plot" value="{{movie.plot}}">
    <select name="actor">

      {{#each celebrities}}

      <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>

      {{/each}}

    </select>

    <button class="btn">Save</button>
  </form>
</div>